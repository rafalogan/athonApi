{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"baseUrl": "src",
		"rootDir": "src",
		"outDir": "./dist",
		"paths": {
			"src/*": [ "*" ]
		},
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2016",
			"es2018",
			"dom"
		],
		"types": [
			"jest",
			"node"
		],
		"declaration": false,
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false
	},
	"ts-node": {
		"transpileOnly": true
	},
	"include": [
		"src/**/*",
		"server.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"__tests__"
	]
}
